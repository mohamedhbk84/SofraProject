<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/commentandrateshipe"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:text="Info"/>

            <ImageButton
                android:id="@+id/profile_button"
                android:layout_width="50dp"
                android:src="@drawable/ic_create_new_folder_black_24dp"
                android:layout_height="50dp"
                android:text="Edit"/>

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:layout_margin="@dimen/dim_m"
        android:background="@drawable/recyclerimage">


        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/Details_Order_Recycler_Image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/dim_l"
            android:layout_marginTop="@dimen/dim_m"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dim_m"
            app:siShape="@drawable/shape_rounded_all_rectangle"
            tools:ignore="VectorDrawableCompat" />



        <TextView
            android:id="@+id/Details_Order_Recycler_Txt_elsanfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Details_Order_Recycler_Image"
            android:layout_marginTop="@dimen/dim_l"
            android:layout_marginEnd="@dimen/dim_12xl"
            android:text="تشيكن فريزار برجر "
            android:textColor="@color/Black"
            android:textSize="@dimen/txt_size_2xl" />

        <TextView
            android:id="@+id/Details_Order_Recycler_Txt_genral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Details_Order_Recycler_Txt_elsanfa"
            android:layout_alignEnd="@id/Details_Order_Recycler_Image"

            android:layout_marginEnd="@dimen/dim_12xl"
            android:text="سندوتش راب تشيكسن محشي"
            android:textSize="@dimen/txt_size_m"

            />

        <TextView
            android:id="@+id/Details_Order_Recycler_Txt_elwafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Details_Order_Recycler_Txt_genral"
            android:layout_alignEnd="@id/Details_Order_Recycler_Txt_elsanfa"

            android:text="بقطع الدجاج"
            android:textSize="@dimen/txt_size_m" />
        <TextView
            android:id="@+id/Details_Order_Recycler_Txt_SaleOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعر"
            android:textSize="@dimen/txt_size_l"
            android:textColor="@color/Black"
            android:layout_marginTop="@dimen/dim_2xl"
            android:layout_marginStart="@dimen/dim_2xl"/>
        <TextView
            android:id="@+id/Details_Order_Recycler_Txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="ريال 20"
            android:textSize="@dimen/txt_size_m"
            android:layout_below="@id/Details_Order_Recycler_Txt_SaleOrder"
            android:layout_marginStart="@dimen/dim_2xl"
            android:layout_marginTop="@dimen/dim_m"
            />
    </RelativeLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>