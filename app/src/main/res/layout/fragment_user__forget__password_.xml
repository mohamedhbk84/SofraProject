<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.SaleFragment.UserCycle.User_Forget_Password_Fragment">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="@dimen/logo"
        android:layout_height="@dimen/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/dim_4xl"
        android:background="@drawable/sofralogo" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_5xl"
        android:layout_below="@id/Logo"
        android:background="@drawable/shapephoto"
        android:gravity="center"
        android:hint="@string/phone"
        android:paddingTop="@dimen/txt_size_ll"
        android:text="forget email"
        android:textSize="@dimen/txt_size_xl" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Forget_Password_Fragment_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_4xl"
        android:layout_marginEnd="@dimen/dim_2xl">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/email"
            android:drawablePadding="@dimen/dim_m"
            android:hint="البريد الالكتروني"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:textSize="@dimen/txt_size_l"
            android:textStyle="bold" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Forget_Password_Fragment_Btn_Send"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@id/Forget_Password_Fragment_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_16xl"
        android:layout_marginEnd="@dimen/dim_m"

        android:background="@drawable/shapebutton"
        android:hint="send"
        android:textSize="@dimen/txt_size_ll" />

</RelativeLayout>