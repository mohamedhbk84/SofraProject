<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.ReguestFragment.BranchesCycle.ContactMeRestaurantFragment">



    <LinearLayout
        android:id="@+id/Rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_l"
        android:text="تواصل معنا"
        android:textSize="@dimen/dim_xl"
        android:textColor="@color/Black" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/Card1"
        android:layout_below="@id/Rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_l"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_l">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"

            android:orientation="vertical"
          >

            <EditText
                android:id="@+id/contactMeRestaurantFragmentEditName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:hint="الاسم "
                android:padding="@dimen/dim_m"
                android:textSize="@dimen/txt_size_l"
                android:inputType="textPersonName"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/Card2"
        android:layout_below="@id/Card1"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_l"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_l">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"

            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/contactMeRestaurantEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:hint="البريد الالكتروني "
                android:padding="@dimen/dim_m"
                android:textSize="@dimen/txt_size_l"
                android:inputType="textEmailAddress"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/CardCard"
        android:layout_below="@id/Card2"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_l"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_l">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"

            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/contactMeRestaurantPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:hint="التليفون "
                android:padding="@dimen/dim_m"
                android:textSize="@dimen/txt_size_l"
                android:inputType="number"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
android:layout_below="@id/CardCard"
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_l"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_xl">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <EditText
                android:id="@+id/contactMeRestaurantFragmentEditMassage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@null"
                android:hint="رسالة "
                android:padding="@dimen/dim_m"
                android:textSize="@dimen/txt_size_l"
                android:inputType="text"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/Linear3333"
        android:layout_margin="@dimen/dim_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup

            android:id="@+id/contactMeRestaurantFragmentRGContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_m"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/contactMeRestaurantRbComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="استعلام" />

            <RadioButton
                android:id="@+id/contactMeRestaurantRbSuggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اقتراح"
                />

            <RadioButton
                android:id="@+id/contactMeRestaurantRbEnquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="شكوي" />

        </RadioGroup>

    </LinearLayout>
    <Button
        android:id="@+id/contactMeRestaurantFragmentBtnSend"
        android:layout_below="@id/Linear3333"
        android:layout_width="150dp"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/album_dp_40"
        android:layout_marginTop="@dimen/dim_l"
        android:background="@drawable/shapebutton"
        android:text="اضف"
        android:textColor="@color/white" />



</RelativeLayout>