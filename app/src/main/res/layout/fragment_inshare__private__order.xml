<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.ReguestFragment.BranchesCycle.INShare_Private_OrderFragment">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewadapter"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        ></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RecyclerViewadapter"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dim_m"
        android:text="المجموع الكلي"
        android:textColor="@color/Black"
        android:textSize="@dimen/dim_l"

        />
    <!--<TextView-->
    <!--android:id="@+id/Total_Number"-->
    <!--android:layout_below="@id/Total"-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_margin="@dimen/dim_m"-->
    <!--android:layout_height="@dimen/album_dp_50"-->
    <!--android:layout_centerInParent="true"/>-->

    <android.support.v7.widget.CardView
        android:id="@+id/Card"
        android:layout_width="@dimen/dim_8xl"
        android:layout_height="@dimen/dim_8xl"
        android:layout_below="@id/Total"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_28xl">
        <!--app:cardElevation="@dimen/dim_l">-->


        <TextView
            android:id="@+id/Total_Number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:text=" 1 " />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/Confirm_Order"
        android:layout_width="100dp"
        android:layout_height="@dimen/album_dp_40"
        android:layout_below="@id/Card"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dim_xl"
        android:layout_marginEnd="@dimen/dim_m"
        android:background="@drawable/shapebutton"
        android:text="تاكيد الطلب"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/more_Choice"
        android:layout_width="100dp"
        android:layout_height="@dimen/album_dp_40"
        android:layout_below="@id/Card"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_xl"
        android:background="@drawable/shapebutton"
        android:text=" المزيد"
        android:textColor="@color/white" />


</RelativeLayout>