<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.ReguestFragment.HomeCycle.Person_InformationAndEditFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Fragment_seller_register_img_profile"
                android:layout_width="@dimen/dim_9xl"
                android:layout_height="@dimen/dim_9xl"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shapeimage"
                android:layout_marginTop="@dimen/dim_5xl"
                android:src="@drawable/new_user" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register_ed_restaurantname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Fragment_seller_register_img_profile"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_person_black_24dp"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="اسم المطعم"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_l"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Fragment_seller_register_ed_restaurantname"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/email"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_l"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_seller_register_email"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/phone"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="الجوال"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_l"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_seller_register_phone"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_home_black_24dp" />

                <Spinner
                    android:id="@+id/Fragment_seller_register_sp_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/relative"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_home_black_24dp" />

                <Spinner
                    android:id="@+id/Fragment_seller_register_sp_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />

            </RelativeLayout>


            <EditText
                android:id="@+id/Edit_PasswordClient"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relative2"

                android:drawablePadding="@dimen/dim_m"
                android:drawableTint="@color/Black"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:layout_marginStart="@dimen/dim_2xl"
                android:textColorHint="@color/Black"/>

            <EditText
                android:id="@+id/Edit_Confirm_Password_Client"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dim_m"
                android:drawablePadding="@dimen/dim_m"
                android:drawableTint="@color/Black"
                android:hint="تاكيد كلمة السر"
                android:layout_below="@id/Edit_PasswordClient"
                android:inputType="textPassword"
                android:paddingStart="@dimen/dim_m"

                android:layout_marginEnd="@dimen/dim_2xl"
                android:layout_marginStart="@dimen/dim_2xl"
                android:textColorHint="@color/Black"/>

            <Button
                android:id="@+id/Fragment_seller_register_btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_3xl"
                android:layout_below="@id/Edit_Confirm_Password_Client"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10xl"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_10xl"
                android:background="@drawable/shapebutton"
                android:text="تعديل"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_xl" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
