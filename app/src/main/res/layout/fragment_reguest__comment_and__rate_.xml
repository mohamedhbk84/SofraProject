<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Fragment.ReguestFragment.HomeCycle.Reguest_Comment_and_Rate_Fragment">
<TextView
    android:id="@+id/txt1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textColor="@color/Black"
    android:textSize="@dimen/dim_l"
    android:gravity="center"
    android:text="يسعدنا بمشاركتك بتعليق او تقيم"/>

    <Button
        android:id="@+id/Add_comment_and_rate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/shapebutton"
        android:text="اضف تعليق او تقيم"
        android:textColor="@color/white"
        android:layout_below="@id/txt1"
        android:layout_centerInParent="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_below="@id/Add_comment_and_rate"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dim_m"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
