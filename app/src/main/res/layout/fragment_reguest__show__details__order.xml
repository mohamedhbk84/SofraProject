<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.ReguestFragment.HomeCycle.Reguest_Show_Details_OrderFragment">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_m"
        android:layout_marginBottom="@dimen/dim_m"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dim_m"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dim_xl"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

        android:background="@drawable/spiner">

            <Spinner
                android:id="@+id/city_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                >

            </Spinner>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_m"
            app:cardCornerRadius="@dimen/dim_xl"
            android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/spiner">

            <EditText
                android:backgroundTint="@color/reguest"
                android:hint="ابحث عن مطعمك المفضل"
                android:id="@+id/the_food_favourit"
                android:textSize="@dimen/dim_mm"
                android:layout_width="match_parent"
                android:layout_height="45dp">

            </EditText>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dim_m"
            app:cardCornerRadius="@dimen/dim_4xl"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/circlefilter"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/IMage_Search_Filter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/dim_m"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginLeft="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_marginRight="@dimen/dim_m"
                android:layout_marginBottom="@dimen/dim_m"
                android:layoutDirection="ltr"
                android:src="@drawable/ic_search_black_24dp" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:id="@+id/RecyclerView"
    android:layout_below="@id/ll"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dim_m"
    android:layout_height="match_parent">

</android.support.v7.widget.RecyclerView>
</RelativeLayout>