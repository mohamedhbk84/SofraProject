<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/Image_View_Food_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:background="@drawable/recyclerimage"></ImageButton>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Image_View_Food_menu"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:layout_marginBottom="@dimen/dim_m"
        app:cardCornerRadius="@dimen/dim_l"
        app:cardElevation="@dimen/dim_l">

        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:background="@drawable/recyclerimage"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Name_Foodmenu"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dim_m"
                    android:text="تشيكن فريز"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_xl" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Name_Foodmenu"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dim_m"
                    android:layout_marginEnd="@dimen/dim_m"
                    android:text="شوية فراخ فل ودجاج وبسلطاتهم وبحواجب"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_l" />

                <TextView
                    android:id="@+id/sale_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dim_5xl"
                    android:text=" 20 "
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_l" />

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dim_m"
                    android:text="sale :"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dim_l" />


            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>