<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="260dp"
        android:layout_centerInParent="true"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/dim_xl"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_2xl"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/dim_m"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_2xl"
                android:text="هل انت متاكد من الخروج"
                android:textColor="@color/backgroundcolor"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_2xl"
                >



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dim_2xl"
                    app:cardElevation="0dp"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >


                        <ImageView
                            android:id="@+id/closeDialogRestaurantClientBtnNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dim_l"
                            android:src="@drawable/clear"
                            android:textColor="@color/backgroundcolor"
                            android:textSize="@dimen/txt_size_xl" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dim_2xl"
                    app:cardElevation="0dp"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/closeDialogRestaurantClientBtnYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dim_xl"
                            android:textColor="@color/backgroundcolor"
                            android:src="@drawable/mark"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>




    </RelativeLayout>